@page
@model RazorPages.Pages.PhoneBookModel
@{
}
@(Html.DevExtreme().DataGrid<DataModels.PhoneBook>()
    .DataSource(ds => ds.RemoteController()
    .LoadUrl(Url.Page(null, "ListAll"))
    .InsertUrl(Url.PageLink("AddItem"))
    )
    .RemoteOperations(true)
    .ShowBorders(true)
    .Columns(columns => {

        columns.AddFor(m => m.IdPb);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Patronymic);

        columns.AddFor(m => m.Surname);

        columns.AddFor(m => m.Phone);

        columns.AddFor(m => m.Sex);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)